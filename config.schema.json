{
    "pluginAlias": "CmdTrigger",
    "pluginType": "accessory",
    "singular": false,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true
            },
            "command": {
                "title": "Command",
                "type": "String",
                "required": true,
                "description": "The shell command to execute."
            },
            "stateful": {
                "title": "Stateful",
                "type": "boolean",
                "default": false,
                "description": "The switch remains on instead of being automatically turned off."
            },
            "delay": {
                "title": "Delay",
                "type": "number",
                "default": 1000,
                "description": "The switch will turn off after this number of milliseconds. Not used if the switch is stateful."
            },
            "execAfterDelay": {
                "title": "Execute after delay",
                "type": "boolean",
                "default": false,
                "description": "The shell command will be execute after the delay."
            }
        }
    }
}